{
  "manifest_version": 3,
  "name": "Misinformation Detection Plugin",
  "version": "1.1",
  "description": "Detect misinformation on X (Twitter) posts using multiple APIs.",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*",
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Misinformation Detection"
  }
  

}
